            const params = lastUpdateTimestamp ? `?action=get_status_updates&since=${lastUpdateTimestamp}` : '?action=get_status_updates';
            
            fetch('api/student_dashboard_api.php' + params)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data.length > 0) {
                        loadDashboardData();
                        loadNotifications();
                    }
                    
                    if (data.timestamp) {
                        lastUpdateTimestamp = data.timestamp;
                    }
                    
                    setTimeout(() => {
                        indicator.classList.remove('active');
