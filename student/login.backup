                        <i class="fas fa-user input-icon"></i>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-wrapper">
                        <input type="email" placeholder="Email Address" id="signUpEmail" required />
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-wrapper">
                        <input type="password" placeholder="Password (min. 6 characters)" id="signUpPassword" required />
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                </div>

                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Sign In -->
        <div class="sign-in">
            <form id="signInForm">
                <h1>Sign In</h1>
                <div id="signInMessage"></div>
                <div class="icons">
                    <a href="#" onclick="socialLogin('Google'); return false;"><i class="fa-brands fa-google"></i></a>
                    <a href="#" onclick="socialLogin('Facebook'); return false;"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" onclick="socialLogin('Instagram'); return false;"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" onclick="socialLogin('GitHub'); return false;"><i class="fa-brands fa-github"></i></a>
                </div>
                <span>or use email and password</span>
                
                <div class="input-group">
                    <div class="input-wrapper">
                        <input type="email" placeholder="Email Address" id="signInEmail" required />
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-wrapper">
                        <input type="password" placeholder="Password" id="signInPassword" required />
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                </div>

                <div class="checkbox-group">
                    <input type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember me</label>
                </div>

                <a href="#" onclick="forgotPassword(); return false;">Forgot password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- OTP Section - Redesigned -->
        <div class="otp-section" id="otpSection">
            <div class="otp-content">

                <!-- Animated Shield -->
                <div class="otp-shield-wrapper">
                    <div class="otp-shield-inner">
                        <div class="otp-shield-ring"></div>
                        <div class="otp-shield-ring"></div>
                        <div class="otp-shield">
                            <i class="fas fa-shield-halved"></i>
                        </div>
                    </div>
                </div>

                <!-- Title -->
                <h2>Verify Your Email</h2>
                <div class="otp-badge">
                    <i class="fas fa-lock"></i>
                    Two-Factor Authentication
                </div>

                <!-- Message area -->
                <div id="otpMessage"></div>

                <!-- Email Card -->
                <div class="otp-email-card">
                    <div class="otp-email-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="otp-email-info">
                        <div class="otp-email-label">Code sent to</div>
                        <div class="otp-email-address" id="otpEmail">—</div>
                    </div>
                    <i class="fas fa-check-circle" style="color:#28a745; font-size:18px;"></i>
                </div>

                <form id="otpForm">
                    <!-- OTP Inputs -->
                    <div class="otp-inputs-wrapper">
                        <div class="otp-inputs-label">Enter 6-digit code</div>
                        <div class="otp-inputs">
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                            <span class="otp-separator">·</span>
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                            <input type="tel" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" />
                        </div>

                        <!-- Progress bar -->
                        <div class="otp-progress-bar">
                            <div class="otp-progress-fill" id="otpProgressFill"></div>
                        </div>
                    </div>

                    <!-- Timer -->
                    <div class="otp-timer-wrapper">
                        <div class="otp-timer-ring" id="timerRingWrapper">
                            <svg viewBox="0 0 48 48">
                                <circle class="ring-bg" cx="24" cy="24" r="20"/>
                                <circle class="ring-progress" id="timerRingProgress" cx="24" cy="24" r="20"/>
                            </svg>
                            <div class="otp-timer-text" id="timerRingText">10:00</div>
                        </div>
                        <div class="otp-timer-info">
                            <div class="otp-timer-label">Code expires in</div>
                            <div class="otp-timer-value" id="timerDisplay">10:00</div>
                        </div>
                    </div>

                    <!-- Verify Button -->
                    <button type="submit" class="otp-verify-btn" id="otpVerifyBtn">
                        <i class="fas fa-check-circle" style="margin-right:8px;"></i>
                        Verify & Continue
                    </button>

                    <!-- Bottom row -->
                    <div class="otp-bottom-row">
                        <a href="#" class="back-link" onclick="cancelOTP(); return false;">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>
                        <a href="#" class="resend-link" id="resendLink" onclick="resendOTP(); return false;">
                            <i class="fas fa-rotate-right"></i> Resend Code
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Toggle Container -->
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <div class="logo-box">
                        <img src="../assets/logs.png" alt="BEC Logo" />
                    </div>
                    <h1>Welcome Back!</h1>
                    <p>Enter your credentials to access<br>your student portal</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <div class="logo-box">
                        <img src="../assets/logs.png" alt="BEC Logo" />
                    </div>
                    <h1>Hello, Beacons!</h1>
                    <p>Register with your details to<br>begin your journey with us</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-content">
            <div class="spinner-container">
                <div class="spinner"></div>
                <div class="spinner"></div>
            </div>
            <div class="loading-text" id="loadingText">Processing...</div>
            <div class="loading-subtext">Please wait a moment</div>
        </div>
    </div>

    <script>
        // Create Particles
        function createParticles() {
            const container = document.getElementById('particles');
            for (let i = 0; i < 60; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (15 + Math.random() * 10) + 's';
                container.appendChild(particle);
            }
        }
        createParticles();

        // DOM Elements
        const container = document.getElementById("container");
        const registerBtn = document.getElementById("register");
        const loginBtn = document.getElementById("login");
        let otpTimer = null;
        let otpExpiryTime = null;
        let otpTotalDuration = 10 * 60 * 1000;
        let resendTimer = null;
        let resendCountdown = 30;

        // Toggle
        registerBtn.addEventListener("click", () => {
            container.classList.add("active");
        });

        loginBtn.addEventListener("click", () => {
            container.classList.remove("active");
            cancelOTP();
        });

        // Sign Up
        document.getElementById("signUpForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const name = document.getElementById("signUpName").value;
            const email = document.getElementById("signUpEmail").value;
            const password = document.getElementById("signUpPassword").value;

            if (name.length < 3) {
                showMessage('error', 'Name must be at least 3 characters', 'signUpMessage');
                return;
            }

            if (password.length < 6) {
                showMessage('error', 'Password must be at least 6 characters', 'signUpMessage');
                return;
            }

            showLoading('Creating your account...');
            
            try {
                const formData = new FormData();
                formData.append('fullname', name);
                formData.append('email', email);
                formData.append('password', password);
                formData.append('role', 'student');

                const response = await fetch('../register_process.php', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                hideLoading();
                
                if (data.success) {
                    showMessage('success', 'Account created successfully! Please login with your credentials.', 'signUpMessage');
                    document.getElementById("signUpForm").reset();
                    setTimeout(() => {
                        container.classList.remove("active");
                    }, 1500);
                } else {
                    showMessage('error', data.message || 'Registration failed. Please try again.', 'signUpMessage');
                }
            } catch (error) {
                hideLoading();
                showMessage('error', 'Registration failed. Please try again.', 'signUpMessage');
                console.error('Registration error:', error);
            }
        });

        // Sign In
        document.getElementById("signInForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const email = document.getElementById("signInEmail").value.trim();
            const password = document.getElementById("signInPassword").value;

            if (!email || !password) {
                showMessage('error', 'Please enter both email and password', 'signInMessage');
                return;
            }

            showLoading('Authenticating...');
            
            try {
                const formData = new FormData();
                formData.append('email', email);
                formData.append('password', password);
                formData.append('action', 'verify_login');
                formData.append('role', 'student');
                
                const response = await fetch('student_login_process.php', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                hideLoading();
                
                if (data.success) {
                    showMessage('success', data.message || 'Login successful!', 'signInMessage');
                    requestOTP(email);
                } else {
                    showMessage('error', data.message || 'Login failed. Please try again.', 'signInMessage');
                }
            } catch (error) {
                hideLoading();
                showMessage('error', 'Login failed. Please try again.', 'signInMessage');
                console.error('Login error:', error);
            }
        });

        // OTP Form - verify
        document.getElementById("otpForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const inputs = document.querySelectorAll('.otp-input');
            const code = Array.from(inputs).map(i => i.value).join('');
            const email = document.getElementById('otpEmail').textContent;

            if (code.length !== 6) {
                showMessage('error', 'Please enter the complete 6-digit code', 'otpMessage');
                triggerShakeAll();
                return;
            }

            showLoading('Verifying your code...');
            
            try {
                const formData = new FormData();
                formData.append('email', email);
                formData.append('otp_code', code);
                formData.append('action', 'verify_otp');
                formData.append('role', 'student');

                const response = await fetch('student_login_process.php', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                hideLoading();
                
                if (data.success) {
                    triggerSuccessAll();
                    showMessage('success', 'Email verified successfully!', 'otpMessage');
                    document.getElementById('otpVerifyBtn').classList.add('complete');
                    setTimeout(() => {
                        window.location.href = '../student_dashboard.php';
                    }, 1500);
                } else {
                    showMessage('error', data.message || 'Invalid or expired OTP', 'otpMessage');
                    triggerShakeAll();
                    document.querySelectorAll('.otp-input').forEach(i => {
                        i.value = '';
                        i.classList.remove('filled');
                    });
                    updateProgress();
                    document.querySelector('.otp-input').focus();
                }
            } catch (error) {
                hideLoading();
                showMessage('error', 'Verification failed. Please try again.', 'otpMessage');
                console.error('OTP verification error:', error);
            }
        });

        // Request OTP
        function requestOTP(email) {
            document.getElementById('otpEmail').textContent = email;
            document.getElementById('otpSection').classList.add('show');
            
            setTimeout(() => {
                document.querySelector('.otp-input').focus();
            }, 300);
            
            otpExpiryTime = Date.now() + otpTotalDuration;
            startTimer();
            startResendCountdown();
            
            showMessage('info', 'Verification code sent to your email!', 'otpMessage');
        }

        // Cancel OTP
        function cancelOTP() {
            document.getElementById('otpSection').classList.remove('show');
            document.querySelectorAll('.otp-input').forEach(i => {
                i.value = '';
                i.classList.remove('filled', 'error-shake', 'success-pop');
            });
            if (otpTimer) clearInterval(otpTimer);
            if (resendTimer) clearInterval(resendTimer);
            document.getElementById('timerDisplay').textContent = '10:00';
            document.getElementById('timerDisplay').classList.remove('warning');
            document.getElementById('timerRingText').textContent = '10:00';
            document.getElementById('timerRingText').classList.remove('warning');
            document.getElementById('timerRingProgress').classList.remove('warning');
            document.getElementById('timerRingProgress').style.strokeDashoffset = '0';
            document.getElementById('otpMessage').innerHTML = '';
            document.getElementById('otpVerifyBtn').classList.remove('complete');
            updateProgress();
        }

        // OTP Timer with ring
        function startTimer() {
            updateTimerDisplay();
            otpTimer = setInterval(updateTimerDisplay, 1000);
        }

        function updateTimerDisplay() {
            const remaining = otpExpiryTime - Date.now();
            const progress = document.getElementById('timerRingProgress');
            const displayEl = document.getElementById('timerDisplay');
            const ringText = document.getElementById('timerRingText');

            if (remaining <= 0) {
                displayEl.textContent = 'Expired';
                ringText.textContent = '0:00';
                displayEl.classList.add('warning');
                ringText.classList.add('warning');
                progress.classList.add('warning');
                progress.style.strokeDashoffset = '125.6';
                clearInterval(otpTimer);
                showMessage('error', 'Code expired. Please request a new one.', 'otpMessage');
                return;
            }

            const mins = Math.floor(remaining / 60000);
            const secs = Math.floor((remaining % 60000) / 1000);
            const timeStr = `${mins}:${secs.toString().padStart(2, '0')}`;
            displayEl.textContent = timeStr;
            ringText.textContent = timeStr;

            // Ring offset: 125.6 is full circumference (2π×20)
            const elapsed = otpTotalDuration - remaining;
            const fraction = elapsed / otpTotalDuration;
            const dashOffset = fraction * 125.6;
            progress.style.strokeDashoffset = dashOffset.toFixed(2);

            if (remaining < 60000) {
                displayEl.classList.add('warning');
                ringText.classList.add('warning');
                progress.classList.add('warning');
            }
        }

        // Resend Countdown
        function startResendCountdown() {
            const resendLink = document.getElementById('resendLink');
            resendCountdown = 30;
            resendLink.classList.add('disabled');
            
            resendTimer = setInterval(() => {
                resendCountdown--;
                resendLink.innerHTML = `<i class="fas fa-clock"></i> Resend in ${resendCountdown}s`;
                
                if (resendCountdown <= 0) {
                    clearInterval(resendTimer);
                    resendLink.classList.remove('disabled');
                    resendLink.innerHTML = `<i class="fas fa-rotate-right"></i> Resend Code`;
                }
            }, 1000);
        }

        // Resend OTP
        async function resendOTP() {
            const resendLink = document.getElementById('resendLink');
            if (resendLink.classList.contains('disabled')) return;
            
            const email = document.getElementById('otpEmail').textContent;
            
            showLoading('Sending new code...');
            
            try {
                const formData = new FormData();
                formData.append('email', email);
                formData.append('action', 'resend_otp');
                formData.append('role', 'student');

                const response = await fetch('student_login_process.php', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                hideLoading();
                
                if (data.success) {
                    showMessage('success', data.message || 'New verification code sent!', 'otpMessage');
                    
                    document.querySelectorAll('.otp-input').forEach(i => {
                        i.value = '';
                        i.classList.remove('filled');
                    });
                    updateProgress();
                    document.querySelector('.otp-input').focus();
                    
                    otpExpiryTime = Date.now() + otpTotalDuration;
                    document.getElementById('timerDisplay').classList.remove('warning');
                    document.getElementById('timerRingText').classList.remove('warning');
                    document.getElementById('timerRingProgress').classList.remove('warning');
                    startResendCountdown();
                } else {
                    showMessage('error', data.message || 'Failed to send new code. Please try again.', 'otpMessage');
                }
            } catch (error) {
                hideLoading();
                showMessage('error', 'Failed to send new code. Please try again.', 'otpMessage');
                console.error('Resend OTP error:', error);
            }
        }

        // Progress bar update
        function updateProgress() {
            const inputs = document.querySelectorAll('.otp-input');
            const filled = Array.from(inputs).filter(i => i.value.trim() !== '').length;
            const pct = (filled / inputs.length) * 100;
            document.getElementById('otpProgressFill').style.width = pct + '%';

            const btn = document.getElementById('otpVerifyBtn');
            if (filled === inputs.length) {
                btn.style.background = 'linear-gradient(135deg, #5a0000, #800000)';
                btn.innerHTML = '<i class="fas fa-unlock-keyhole" style="margin-right:8px;"></i> Verify & Continue';
            } else {
                btn.style.background = '';
                btn.innerHTML = '<i class="fas fa-check-circle" style="margin-right:8px;"></i> Verify & Continue';
            }
        }

        // Shake animation on error
        function triggerShakeAll() {
            document.querySelectorAll('.otp-input').forEach(inp => {
                inp.classList.remove('error-shake');
                void inp.offsetWidth; // reflow
                inp.classList.add('error-shake');
                setTimeout(() => inp.classList.remove('error-shake'), 600);
            });
        }

        // Success animation
        function triggerSuccessAll() {
            document.querySelectorAll('.otp-input').forEach((inp, i) => {
                setTimeout(() => {
                    inp.classList.add('success-pop');
                }, i * 60);
            });
        }

        // OTP Input Handling
        const otpInputs = document.querySelectorAll('.otp-input');
        otpInputs.forEach((input, index) => {
            input.addEventListener('input', (e) => {
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
                if (e.target.value) {
                    e.target.classList.add('filled');
                    if (index < otpInputs.length - 1) {
                        otpInputs[index + 1].focus();
                    }
                } else {
                    e.target.classList.remove('filled');
                }
                updateProgress();
            });
            
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    otpInputs[index - 1].focus();
                    otpInputs[index - 1].classList.remove('filled');
                    updateProgress();
                }
            });

            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text').replace(/[^0-9]/g, '');
                for (let i = 0; i < Math.min(pastedData.length, otpInputs.length); i++) {
                    otpInputs[i].value = pastedData[i];
                    otpInputs[i].classList.add('filled');
                }
                updateProgress();
                // Focus last filled or next empty
                const nextEmpty = Array.from(otpInputs).find(inp => !inp.value);
                if (nextEmpty) nextEmpty.focus();
                else otpInputs[otpInputs.length - 1].focus();
            });
        });

        // Messages
        function showMessage(type, msg, containerId) {
            const el = document.getElementById(containerId);
            const icon = type === 'success' ? 'fa-check-circle' : 
                        type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
            el.innerHTML = `<div class="message ${type} show"><i class="fas ${icon}"></i> ${msg}</div>`;
            setTimeout(() => el.innerHTML = '', 5000);
        }

        // Loading
        function showLoading(text) {
            document.getElementById('loadingText').textContent = text;
            document.getElementById('loadingOverlay').classList.add('show');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('show');
        }

        // Social Login
        function socialLogin(provider) {
            showMessage('info', `${provider} authentication coming soon!`, 
                container.classList.contains('active') ? 'signUpMessage' : 'signInMessage');
        }

        // Forgot Password
        async function forgotPassword() {
            const email = document.getElementById('signInEmail').value;
            if (!email) {
                showMessage('error', 'Please enter your email address first', 'signInMessage');
                document.getElementById('signInEmail').focus();
                return;
            }
            
            showLoading('Sending reset link...');
            
            try {
                const formData = new FormData();
                formData.append('email', email);
                formData.append('action', 'forgot_password');
                formData.append('role', 'student');

                const response = await fetch('student_login_process.php', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                hideLoading();
                
                if (data.success) {
                    showMessage('success', data.message || 'Password reset link sent to your email!', 'signInMessage');
                } else {
                    showMessage('error', data.message || 'Failed to send reset link. Please try again.', 'signInMessage');
                }
            } catch (error) {
                hideLoading();
                showMessage('error', 'Failed to send reset link. Please try again.', 'signInMessage');
                console.error('Forgot password error:', error);
            }
        }
    </script>
</body>
