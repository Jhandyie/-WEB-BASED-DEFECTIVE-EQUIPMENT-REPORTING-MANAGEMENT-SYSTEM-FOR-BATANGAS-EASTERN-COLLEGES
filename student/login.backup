 */
function verifyOTPHandler() {
    // Debug: Log what we're receiving
    error_log("verifyOTPHandler called with: email=" . ($_POST['email'] ?? 'NOT SET') . ", otp_code=" . ($_POST['otp_code'] ?? 'NOT SET'));
    
    $email = trim($_POST['email'] ?? '');
